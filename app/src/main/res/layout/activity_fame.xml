<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fame_background"
    tools:context=".FameActivity">

        <ImageView
            android:id="@+id/fame_img_logo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/halloffame" />

        <TableLayout
            android:id="@+id/fame_tbl_fame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fame_img_logo"
            android:layout_above="@+id/fame_exit"
            android:stretchColumns="0,1" />

        <Button
            android:id="@+id/fame_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/exit" />

</RelativeLayout>